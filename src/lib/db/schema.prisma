datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id                  String    @id
  name                String
  email               String
  emailVerified       Boolean   @default(false)
  image               String?
  techLevel           String?
  motivation          String?
  depthPreference     String?
  dailyTime           String?
  timezone            String?
  newsletterDay       String    @default("Friday")
  newsletterTime      String    @default("09:00")
  nextNewsletterAtUtc DateTime?
  lastNewsletterAtUtc DateTime?
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @default(now()) @updatedAt

  planType        PlanType  @default(NONE)
  accessExpiresAt DateTime?

  sessions                Session[]
  accounts                Account[]
  userTagPreferences      UserTagPreference[]
  userArticleInteractions UserArticleInteraction[]
  dailyFeedItems          DailyFeedItem[]
  newsletterSendLogs      NewsletterSendLog[]

  @@unique([email])
  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  @@map("verification")
}

model Article {
  id             String   @id @default(cuid())
  link           String
  source         String?
  summary        String
  digest         String?
  imageUrl       String?
  headline       String?
  guid           String?  @unique
  relevanceScore Int
  tags           Tag[]
  publishedAt    DateTime

  createdAt               DateTime                 @default(now())
  updatedAt               DateTime                 @updatedAt
  userArticleInteractions UserArticleInteraction[]
  dailyFeedItems          DailyFeedItem[]
  tiktokPosts             TiktokPost[]
}

model Tag {
  id                 String              @id @default(uuid())
  name               String              @unique
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  userTagPreferences UserTagPreference[]
  articles           Article[]
}

model UserTagPreference {
  id        String   @id @default(uuid())
  userId    String
  tagId     String
  score     Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
  tag  Tag  @relation(fields: [tagId], references: [id])

  @@unique([userId, tagId])
}

model UserArticleInteraction {
  id              String          @id @default(uuid())
  userId          String
  articleId       String
  interactionType InteractionType
  dwellTimeMs     Int?
  createdAt       DateTime        @default(now())

  user    User    @relation(fields: [userId], references: [id])
  article Article @relation(fields: [articleId], references: [id])

  @@unique([userId, articleId, interactionType])
  @@index([userId])
  @@index([articleId])
  @@index([userId, interactionType])
}

model DailyFeedItem {
  id        String   @id @default(uuid())
  userId    String
  articleId String
  feedDate  DateTime
  position  Int

  createdAt DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id])
  article Article @relation(fields: [articleId], references: [id])

  @@unique([userId, feedDate, articleId])
  @@index([userId, feedDate])
}

model NewsletterSendLog {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  scheduledForUtc DateTime
  sentAtUtc       DateTime @default(now())

  @@unique([userId, scheduledForUtc])
  @@index([scheduledForUtc])
}

model TiktokPost {
  id            String   @id @default(cuid())
  articleId     String
  article       Article  @relation(fields: [articleId], references: [id], onDelete: Cascade)
  pid           String   @unique
  postText      String
  videoUrl      String?
  scheduledDate String? // Format: "YYYY-MM-DD"
  scheduledTime String? // Format: "HH:MM"
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([pid])
  @@index([articleId])
  @@map("tiktok_post")
}

enum InteractionType {
  skip_fast
  view
  view_long
  like
  bookmark
  share
  hide_topic
  more_like_this
}

enum PlanType {
  NONE
  YEAR
  LIFETIME
}
